{
  "manifest_version": 2,
  "name": "Clickbait Blocker",
  "description": "Automatically block sites known for being click-baity, and allow custom settings to add or remove sites from those lists.",
  "version": "do_not_edit",
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content_scripts.bundle.js"]
    },
    {
      "matches": ["https://facebook.com/*"],
      "js": ["facebook.bundle.js"]
    }
  ],
  "content_security_policy": "script-src 'self'; object-src 'self'",
  "permissions": [
    "storage"
  ],
  "icons": {
    "16": "img/logo_16.png",
    "48": "img/logo_48.png",
    "128": "img/logo_128.png"
  },
  "options_ui": {
    "page": "pages/options.html",
    "chrome_style": true,
    "open_in_tab": true
  }
}
